<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_toymain"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_devicestatus"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:background="@drawable/ic_disconnected" />

    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center_horizontal" >

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="vertical" >
                
                <ImageButton
                    android:id="@+id/ib_shaken_add"
                    android:layout_width="96dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/btn_style_linkcube_add" />
                <LinearLayout
                    android:id="@+id/ll_shaken"
                	android:layout_width="100dp"
                	android:layout_height="150dp"
                	android:gravity="left"
                	android:orientation="horizontal" 
                    android:layout_marginRight="15dp"
                    android:background="@drawable/btn_shaken" >

                    <ImageView
                        android:id="@+id/iv_shaken_sen0"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="120dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/btn_block" />
					<ImageView
                        android:id="@+id/iv_shaken_sen1"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="120dp"
                        android:background="@drawable/btn_block" />
					<ImageView
                        android:id="@+id/iv_shaken_sen2"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="120dp"
                        android:background="@drawable/btn_block" />
					<ImageView
                        android:id="@+id/iv_shaken_sen3"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="120dp"
                        android:background="@drawable/btn_block" />
					<ImageView
                        android:id="@+id/iv_shaken_sen4"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="120dp"
                        android:background="@drawable/btn_block" />

                </LinearLayout>
                <ImageButton
                    android:id="@+id/ib_shaken"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="15dp"
                    android:visibility="gone"
                    android:background="@drawable/btn_shaken" />
				<ImageButton
                    android:id="@+id/ib_shaken_minus"
                    android:layout_width="96dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/btn_style_linkcube_minus" />

                <ToggleButton
                    android:id="@+id/tb_shaken"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="50dp"
                    android:text="ToggleButton"
                    android:enabled="false"
                    android:visibility="gone"
                    android:textOn=""
					android:textOff=""
                    android:background="@drawable/chk_style_linkcube"  />

            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:orientation="vertical" >
                <ImageButton
                    android:id="@+id/ib_voidced_add"
                    android:layout_width="96dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/btn_style_linkcube_add" />
                <LinearLayout
                    android:id="@+id/ll_voidced"
                	android:layout_width="100dp"
                	android:layout_height="150dp"
                	android:layout_gravity="left"
                	android:orientation="horizontal" 
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/btn_voiced">
					<ImageView
                        android:id="@+id/iv_voiced_sen0"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="120dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/btn_block" />
					<ImageView
                        android:id="@+id/iv_voiced_sen1"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="120dp"
                        android:background="@drawable/btn_block" />
					<ImageView
                        android:id="@+id/iv_voiced_sen2"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="120dp"
                        android:background="@drawable/btn_block" />
					<ImageView
                        android:id="@+id/iv_voiced_sen3"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="120dp"
                        android:background="@drawable/btn_block" />
					<ImageView
                        android:id="@+id/iv_voiced_sen4"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="120dp"
                        android:background="@drawable/btn_block" />
					</LinearLayout>
                <ImageButton
                    android:id="@+id/ib_voiced"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="15dp"
                    android:visibility="gone"
                    android:background="@drawable/btn_voiced" />
				<ImageButton
                    android:id="@+id/ib_voidced_minus"
                    android:layout_width="96dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/btn_style_linkcube_minus" />

                <ToggleButton
                    android:id="@+id/tb_voiced"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="50dp"
                    android:text="ToggleButton"
                    android:visibility="gone"
                    android:enabled="false"
					android:textOn=""
					android:textOff=""
                    android:background="@drawable/chk_style_linkcube" />

            </LinearLayout>
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

        <EditText
            android:id="@+id/editTextSound"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:visibility="gone"
            android:ems="10" >

            <requestFocus />
        </EditText>
        <EditText
            android:id="@+id/editTextSpeed"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:visibility="gone"
            android:ems="10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:visibility="gone"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/btn_minus"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:text="-" />

            <TextView
                android:id="@+id/tv_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <Button
                android:id="@+id/btn_add"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="+" />

        </LinearLayout>
        
        </LinearLayout>

        <Button
            android:id="@+id/btn_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Button" />

 </LinearLayout>
