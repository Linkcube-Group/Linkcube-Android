<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MainPage"
    android:gravity="center_horizontal"
    android:padding="20dp" >

    <me.linkcube.app.widget.CWClearEditText
        android:id="@+id/feed_back_content_et"
        style="@style/LineEditText"
        android:layout_width="match_parent"
        android:ems="10"
        android:inputType="textMultiLine" >

        <requestFocus />
    </me.linkcube.app.widget.CWClearEditText>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/edittext_max_count_word_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:text="@string/limit_word" />

        <TextView
            android:id="@+id/edittext_max_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/edittext_max_count_word_tv"
            android:layout_marginTop="10dp"
            android:text="200" />
    </RelativeLayout>

    <me.linkcube.app.widget.CWClearEditText
        android:id="@+id/feedback_user_email_et"
        style="@style/LineEditText"
        android:layout_width="match_parent"
        android:ems="10"
        android:inputType="textMultiLine" >
    </me.linkcube.app.widget.CWClearEditText>

    <TextView
        android:id="@+id/feedback_user_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:text="@string/feedback_email" />

</LinearLayout>