<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/app_pause_rl"
        android:layout_width="match_parent"
        android:layout_height="64dp" >

        <ImageView
            android:id="@+id/update_noti_iv"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_launcher" />

        <ProgressBar
            android:id="@+id/update_noti_pb"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/update_noti_iv"
            android:max="100"
            android:progress="10"
            android:secondaryProgress="100" />

        <TextView
            android:id="@+id/app_pause_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/update_noti_pb"
            android:text="连酷Linkcube"
            android:textColor="#ffffff" />
    </RelativeLayout>

</LinearLayout>