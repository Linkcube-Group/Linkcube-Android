<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/about_us_bg" >
	<TextView 
        android:id="@+id/about_slogan_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="150dp"
        android:text="@string/about_slogan"
        android:textSize="28sp"
        android:textColor="@color/abs__background_holo_light"
        android:background="@android:color/transparent"/>
    <TextView 
        android:id="@+id/about_company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/about_slogan_tv"
        android:text="@string/about_company_name"
        android:textSize="22sp"
        android:textColor="@color/abs__background_holo_light"
        android:background="@android:color/transparent"/>
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/about_company_name"
        android:paddingTop="40dp"
        android:text="@string/version_name"
        android:textSize="18sp"
        android:textColor="@color/abs__background_holo_light"
        android:background="@android:color/transparent"/>
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="40dp"
        android:text="@string/linkcube_website"
        android:textSize="18sp"
        android:textColor="@color/abs__background_holo_light"
        android:background="@android:color/transparent"/>
</RelativeLayout>