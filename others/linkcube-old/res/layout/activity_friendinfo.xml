<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainweixin"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#aaa" >

       <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#fff" >

        <ImageView
            android:id="@+id/ibtn_return"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
          	android:layout_marginTop="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/btn_style_linkcube_return_button" />

    </RelativeLayout>
 	
 	<LinearLayout
        android:id="@+id/ll_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/im_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/default_avatar"
            android:scaleType="centerInside" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/ll_avatar"
            android:gravity="bottom"
            android:orientation="vertical" >

			<TextView
			    android:id="@+id/tv_nickname"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textColor="#000"
			    android:text="战士"
			    android:layout_marginTop="15dp"
			    android:textAppearance="?android:attr/textAppearanceMedium" />
			
			<RelativeLayout
	        	android:layout_width="wrap_content"
	        	android:layout_height="match_parent"
	        	android:layout_marginTop="5dp" >
				
	
				<ImageView
				    android:id="@+id/imageView1"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignParentLeft="true"
				    android:layout_centerVertical="true"
				    android:src="@drawable/bg_gender" />
				<ImageView
				    android:id="@+id/imageView2"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignParentLeft="true"
				    android:layout_centerVertical="true"
				    android:layout_marginLeft="5dp"
				    android:src="@drawable/bg_male" />
	
				<TextView
				    android:id="@+id/tv_age"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignParentRight="true"
					android:layout_centerVertical="true"		    
				    android:layout_toRightOf="@+id/imageView2"
				    android:textColor="#000"
				    android:text="33" />
	
				<TextView
				    android:id="@+id/tv_astrology"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_centerVertical="true"
				    android:layout_alignParentRight="true"
				    android:layout_alignTop="@+id/imageView2"
				    android:layout_marginRight="10dp"
				    android:textColor="#000"
				    android:text="魔羯座" />
	
			</RelativeLayout>
			
	
		</LinearLayout>
    </LinearLayout>

	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
		android:layout_marginTop="5dp"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="15dp"
	    android:layout_alignParentRight="true"
	    android:orientation="vertical" >

		<TextView
		    android:id="@+id/textView4"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="5dp"
			android:textColor="#000"
		    android:text="连酷ID"
		    android:textAppearance="?android:attr/textAppearanceMedium" />
	
		<TextView
		    android:id="@+id/tv_jid"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="5dp"
		    android:textColor="#000"
		    android:text="123154" />
	
		<TextView
		    android:id="@+id/textView5"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dp"
			android:textColor="#000"
		    android:text="签名档"
		    android:textAppearance="?android:attr/textAppearanceMedium" />
	
		<TextView
		    android:id="@+id/tv_PS"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="5dp"
		    android:text="这个人很懒，什么都没有留下！" />
	
		<Button
		    android:id="@+id/btn_connectfriend"
		    android:layout_width="wrap_content"
		    android:layout_height="40dp"
		    android:layout_marginTop="40dp"
		    android:layout_marginBottom="2dp"
		    android:layout_marginLeft="10dp"
		    android:layout_marginRight="10dp"
		    android:background="@drawable/btn_style_linkcube_big_pink_button"
		    android:text="连我，一起游戏" />
	</LinearLayout>

	
</LinearLayout>
