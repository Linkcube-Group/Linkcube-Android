<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MainPage"
    android:gravity="center_horizontal"
    android:padding="20dp" >

    <me.linkcube.app.widget.CWClearEditText
        android:id="@+id/feed_back_content_et"
        style="@style/LineEditText"
        android:layout_width="match_parent"
        android:inputType="textMultiLine"
        android:ems="10" >

        <requestFocus />
    </me.linkcube.app.widget.CWClearEditText>

    <TextView
        android:id="@+id/edittext_max_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:text="200字" />
    
    <me.linkcube.app.widget.CWClearEditText
        android:id="@+id/feedback_user_email_et"
        style="@style/LineEditText"
        android:layout_width="match_parent"
        android:inputType="textMultiLine"
        android:ems="10" >

    </me.linkcube.app.widget.CWClearEditText>

    <TextView
        android:id="@+id/feedback_user_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:text="邮箱" />

</LinearLayout>